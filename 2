use std::cell::RefCell;
use std::rc::{Rc, Weak};

pub enum Node {
    Root {
        children: RefCell<Rc<Vec<Node>>>,
    },
    Folder {
        name: String,
        size: usize,
        parent: RefCell<Weak<Node>>,
        children: RefCell<Rc<Vec<Node>>>,
    },
    File {
        name: String,
        size: usize,
        parent: RefCell<Weak<Node>>,
    },
}
